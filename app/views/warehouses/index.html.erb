<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Master Data</li><li>Warehouse</li><li>List</li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <section id="widget-grid" class=""><!-- widget grid -->
    <div id='notice_template'><%= render 'layouts/notice' %></div>
    <div class="row"><!-- row -->
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><!-- NEW WIDGET START -->
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <header id="header-product" role="heading">
          <h2><span class="widget-icon"> <i class="fa fa-list-ul"></i> </span> <%= t(:warehouse_list) %></h2> <!-- header content --></header>
          <div><!-- widget div-->
            <div class="widget-body no-padding"><!-- widget content -->
              <%= link_to new_warehouse_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
                <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span><%= t(:add_warehouse) %>
              <% end %>
            </div>
            <table class="table table-striped table-bordered" width="100%">
              <thead>
                <tr>
                  <th>No</th>
                  <th>
                    Code <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'office_name-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'office_name-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Name <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'office_name-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'office_name-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Branch <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'office_name-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'office_name-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Address<%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'address-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'address-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Description <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'description-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'description-asc', class: 'sorting' %>
                  </th>
                  <th>Action</th>
                </tr>
                <tr>
                  <th></th>
                  <th class="hasinput"><%= text_field_tag :code, params[:code], class: 'form-control search', name: 'offices.office_name' %></th>
                  <th class="hasinput"><%= text_field_tag :office_name, params[:office_name], class: 'form-control search', name: 'offices.office_name' %></th>
                  <th class="hasinput"><%= text_field_tag :head_office_name, params[:head_office_name], class: 'form-control search', name: 'head_offices.office_name' %></th>
                  <th class="hasinput"><%= text_field_tag :address, params[:address], class: 'form-control search', name: 'offices.address' %></th>
                  <th class="hasinput"><%= text_field_tag :description, params[:description], class: 'form-control search', name: 'offices.description' %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id='warehouse-list'><%= render 'warehouse_list' %></tbody>
            </table>
          </div><!-- end widget -->
        </div><!-- end widget div -->
      </article><!-- WIDGET END -->
    </div><!-- end row -->
  </section><!-- end widget grid -->
</div><!-- end row -->
<% @warehouses.each_with_index do |warehouse, i| %>
  <tr>
    <td class="hidden-phone"><%= params[:page] ? (params[:page].to_i*10+i-9) : i+1 %></td>
    <td class="hidden-phone"><%= warehouse.code rescue ''%></td>
    <td><%= link_to warehouse.office_name, warehouse_path(warehouse), class: 'blue' %></td>
    <td class="hidden-phone"><%= warehouse.city.name rescue '' %></td>
    <td class="hidden-phone"><%= warehouse.address %></td>
    <td class="hidden-phone"><%= warehouse.description %></td>
    <td class="nowrap">
      <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_warehouse_path(warehouse), class: "btn btn-primary btn-xs custom-edit-btn" %>
      <%= link_to raw("<i class='fa fa-trash-o'></i>"), 'javascript:void(0)', onclick: "delete_one(#{warehouse.id}, 'warehouses')", class: "btn btn-danger btn-xs custom-edit-btn" %>
    </td>
  </tr>
<% end %>
<tr>
  <td colspan=11><!-- start pagination -->
    <div class="dataTables_paginate paging_simple_numbers" id="dt_basic_paginate">
      <%= pagination_links(@warehouses, options = {}) %>
    </div>
  </td>
</tr>
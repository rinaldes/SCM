<div id="ribbon">
  <ol class="breadcrumb">
    <li>Inventory</li><li>TI Inventory Issue</li><li>List</li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <header id="header-product" role="heading">
          <h2><span class="widget-icon"> <i class="fa fa-list-ul"></i> </span> Inventory Issue List</h2> <!-- header content --></header>
          <%= link_to raw("<span class='btn-label'><i class='glyphicon glyphicon-plus'></i></span>Add Inventory Issue"), new_stock_transfer_url,
            class: "btn btn-labeled btn-primary edit-btn-primary" if current_user.can_manage_stock_mutation? %>
          <br>
          <div>
            <div class="widget-body no-padding">
              <table class="table table-striped table-bordered" width="100%">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>
                      Date<%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'st_created_at-desc', class: 'sorting hide' %>
                      <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'st_created_at-asc', class: 'sorting' %>
                    </th>
                    <th>
                      SI Number <%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'effective_date-desc', class: 'sorting hide' %>
                      <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'effective_date-asc', class: 'sorting' %>
                    </th>
                    <th class="punya_toko">
                      Location <%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'location_name-desc', class: 'sorting hide' %>
                      <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'location_name-asc', class: 'sorting' %>
                    </th>
                    <th>
                      Remark <%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'remark-desc', class: 'sorting hide' %>
                      <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'remark-asc', class: 'sorting' %>
                    </th>
                    <th>
                      By <%= link_to raw("<i class='fa fa-sort-desc'></i>"), 'javascript:void(0)', id: 'receiver_name-desc', class: 'sorting hide' %>
                      <%= link_to raw("<i class='fa fa-sort-asc'></i>"), 'javascript:void(0)', id: 'receiver_name-asc', class: 'sorting' %>
                    </th>
                  </tr>
                  <tr>
                    <th></th>
                    <th class="hasinput"><%= text_field_tag :created_at, params[:created_at], class: 'form-control search', name: "to_char(stock_transfers.created_at, 'DD-MM-YYYY')" %></th>
                    <th class="hasinput"><%= text_field_tag :effective_date, params[:effective_date], class: 'form-control search', name: "to_char(effective_date, 'DD-MM-YYYY')" %></th>
                    <th class="hasinput punya_toko"><%= text_field_tag :location, params[:location], class: 'form-control search', name: "locations.name" %></th>
                    <th class="hasinput"><%= text_field_tag :remark, params[:remark], class: 'form-control search' %></th>
                    <th class="hasinput">
                      <%= text_field_tag :receiver_name, params[:receiver_name], class: 'form-control search', name: "concat(users.first_name, ' ', users.last_name)" %>
                    </th>
                  </tr>
                </thead>
                <tbody id='stock_transfer-list'><%= render 'stock_transfer_list' %></tbody>
              </table>
            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>

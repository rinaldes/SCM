<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<script type="text/javascript">
  $(document).ready(function() {
    autocomplete_barcode()
    $('.add_brand').click(function(){
      add_brand()
    })

    $("#stock_transfer_origin_stock").autocomplete({
      source : function(request, response) {
        $.ajax({
          url : "/branches/autocomplete_branch_office_name",
          dataType : "json",
          data : {
            term : request.term
          },
          success: function (data){
            response(data),
            nomor_ganti()
          },
        });
      }
    });
    $("#stock_transfer_branch_id").autocomplete({
      source : function(request, response) {
        $.ajax({
          url : "/branches/autocomplete_branch_office_name",
          dataType : "json",
          data : {
            term : request.term
          },
          success: function (data){
            response(data),
            nomor_ganti()
          },
        });
      }
    });
    $("#stock_transfer_destination_stock").autocomplete({
      source : function(request, response) {
        $.ajax({
          url : "/branches/autocomplete_branch_office_name",
          dataType : "json",
          data : {
            term : request.term
          },
          success: function (data){
            response(data),
            nomor_ganti()
          },
        });
      }
    });
  });

  function nomor_ganti(){
    if ($('#good_transfer_destination_warehouse_id').val() != '' && $('#good_transfer_origin_warehouse_id').val() != '' && $('#supplier_name').val() != ''){
      $.ajax({
          url: '/good_transfers/get_last_number',
          type: 'get',
          dataType: 'json',
          data: {
            supplier_id: $('.supplier_id').val()
          },
          success: function(data){
            //MST/Name Branch atau Name HO/No Supplier/Tahun-Bulan-Hari/No urut per supplier (terus berlanjut hingga 1 tahun)
            $("#stock_transfer_code").val("MST/"+$('#good_transfer_origin_warehouse_id').get(0).options[$('#good_transfer_origin_warehouse_id').get(0).selectedIndex].innerHTML+" - "+$('#good_transfer_destination_warehouse_id').get(0).options[$('#good_transfer_destination_warehouse_id').get(0).selectedIndex].innerHTML+"/"+$("#supplier_code").val()+"/"+$('#good_transfer_mutation_date').val()+"/"+data.number);
          }
      })
    }
  }

  function beforeSave(){
    var good_id = [];
    var tot = $('#request tbody tr').length;
    if(tot != 0){
      for(var y=0; y < tot; y+=1){
        good_id.push($("#request tbody tr:eq("+ y +") td:eq(0) span").text())
      }
      $("#good_list").val(good_id.toString());
      clone_inputs()
      setTimeout(function(){$('form').submit()}, 1000);
    }else{
      alert('Insert Data First!')
      return false;
    }
  }

  function add_brand(product_id){
    var date = new Date();
    $.ajax({
      url: '/stock_transfers/add_brand',
      data: {
        key: date.getDay() + ""+date.getMonth() + "" + date.getFullYear() + "" + date.getHours() + "" + date.getMinutes() + "" + date.getSeconds(), product_id: product_id, origin_branch: $("#stock_transfer_branch_id").val()
      }
    })
  }

  function merk(){
  }

  function autocomplete_barcode(){
    $(".autocompletenya").autocomplete({
      search: function () {},
      source: function (request, response)
      {
        $.ajax(
        {
          url: "/products/autocomplete_goods_barcode",
          dataType: "json",
          data: {term: request.term},
          success: function (data){
            response(data)
          },
        });
      },
      select: function( event, ui ) {
        add_brand(ui.item.id)
      },
      minLength: 1
    });
  }

  function deleteRow(event){
    $(event.target).parent().parent().parent().remove();
  }
  function add_products(module_name){
        var date = new Date();
        $.ajax({
          url: '/stock_transfer/add_product',
          data: {
            key: date.getDay() + ""+date.getMonth() + "" + date.getFullYear() + "" + date.getHours() + "" + date.getMinutes() + "" + date.getSeconds(), id: $('#product_id').val(),
            quantities: $('#quantity_number').val(), branch_id: $('.origin_branch_id').val(), origin_warehouse_id: $('.ho_id').val(), destination_warehouse_id: $('.destination_warehouse_id').val(),
            transaction_type: '<%= params[:controller].chop %>'
          }
        })
      }
</script>
<script src="/js/jquery.min.js"></script>

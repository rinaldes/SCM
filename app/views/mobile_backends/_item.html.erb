<thead>
  <tr>
    <th><%= t(:no) %></th>
    <th>
      <%= t(:no_struk) %>
      <span style="float: right;">
        <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'sales_code-desc', class: 'sorting hide' %>
        <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'sales_code-asc', class: 'sorting' %>
      </span>
    </th>
    <th>
      SKU
      <span style="float: right;">
        <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'article-desc', class: 'sorting hide' %>
        <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'article-asc', class: 'sorting' %>
      </span>
    </th>
    <th><%= t(:item_description) %></th>
    <th><%= t(:qty) %></th>
    <th>UoM</th>
    <th><%= t(:status) %></th>
  </tr>
  <tr>
    <th></th>
    <th class="hasinput"><%= text_field_tag :struck, params[:struck], class: 'form-control pencarian', onchange: "load();" %></th>
    <th class="hasinput"><%= text_field_tag :sku, params[:sku], class: 'form-control pencarian', onchange: "load();" %></th>
    <th><%= text_field_tag :description, params[:description], class: 'form-control pencarian', onchange: "load();" %></th>
    <th></th>
    <th></th>
    <th><%= text_field_tag :status, params[:status], class: 'form-control pencarian', onchange: "load();" %></th>
  </tr>
</thead>
<tbody id='purchase_order-list'><%= render 'item_list' %></tbody>
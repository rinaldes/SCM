<%= render 'shared/breadcrumb' %>
<div id="content">
  <section id="widget-grid">
    <div id='notice_template'><%= render 'layouts/notice' %></div>
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
          <header id="header-product" role="heading">
          <h2><span class="widget-icon"> <i class="fa fa-list-ul"></i> </span> Repayment Report List</h2></header>
          <div style="margin-top:-10px;">
            <div class="widget-body no-padding">
              <%= link_to export_finance_reports_repayments_path(format: "xlsx"), :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
                <span class="btn-label"><i class="glyphicon glyphicon-download"></i></span>Export XLS
              <% end %>
            </div>
            <div class="table-responsive">
              <table class="table table-striped table-brequested table-hover table-bordered overflow" width="100%">
                <thead>
                  <tr>
                    <th rowspan="2">Tgl Bon</th>
                    <th rowspan="2">Faktur</th>
                    <th rowspan="2">Nominal</th>
                    <th rowspan="2">Sub Total</th>
                    <th rowspan="2">Tgl Kontra</th>
                    <th colspan="2">Brg Kurang</th>
                    <th colspan="4">Retur</th>
                    <th colspan="2">Pending</th>
                    <th rowspan="2">Okir</th>
                    <th rowspan="2">Materai & Adm Bank</th>
                    <th colspan="2">Tunai</th>
                    <th colspan="2">Giro</th>
                    <th rowspan="2">Total</th>
                    <th rowspan="2">Keterangan</th>
                  </tr>
                  <tr>
                    <th>Qty</th>
                    <th>Nominal</th>
                    <th>Tgl</th>
                    <th>No. Form</th>
                    <th>Qty</th>
                    <th>Nominal</th>
                    <th>Qty</th>
                    <th>Nominal</th>
                    <th>Tgl</th>
                    <th>Nominal</th>
                    <th>Tgl</th>
                    <th>Nominal</th>
                  </tr>
                </thead>
                <tbody id='repayment_list'><%= render 'list' %></tbody>
              </table>
            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>

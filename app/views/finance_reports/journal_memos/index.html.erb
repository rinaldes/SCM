<%= render 'shared/breadcrumb' %>
<div id="content">
  <section id="widget-grid">
    <div id='notice_template'><%= render 'layouts/notice' %></div>
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
          <header id="header-product" role="heading">
          <h2><span class="widget-icon"> <i class="fa fa-list-ul"></i> </span> Journal Memo Report List</h2></header>
          <div style="margin-top:-10px;">
            <div class="widget-body no-padding">
              <%= link_to export_finance_reports_journal_memos_path(format: "xlsx"), :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
                <span class="btn-label"><i class="glyphicon glyphicon-download"></i></span>Export XLSX
              <% end %>
            </div>
            <div class="table-responsive">
              <table class="table table-striped table-brequested table-hover table-bordered overflow" width="100%">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Supplier</th>
                    <th>Date In</th>
                    <th>No Faktur</th>
                    <th>Qty</th>
                    <th>Nominal Price</th>
                    <th>Disc 1</th>
                    <th>Disc 2</th>
                    <th>Disc 3</th>
                    <th>Disc 4</th>
                    <th>Nominal Pay</th>
                  </tr>
                </thead>
                <tbody id='journal_memo_list'><%= render 'list' %></tbody>
              </table>
            </div>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>

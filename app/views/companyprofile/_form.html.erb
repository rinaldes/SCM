<script src="/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="/js/jquery-ui.js" type="text/javascript"></script>
<script src="/js/jquery.maskMoney.js" type="text/javascript"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.2/js/select2.min.js"></script>

<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>User Profile</li><li><%= label %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-User">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= label %> Company Profile</h2>
          <!-- <p><%= request.base_url.sub(/^https?\:\/\//, '') %></p> -->
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @company_profiles, :url => url_for(:controller => 'companyprofile', :action => 'update'), html: {class: "smart-form", id: "form-update-verify"} do |f| %>
              <fieldset>
                <div class="row">
                  <section class="col col-md-12">
                    <section class="col col-md-6">
                      <section class="form-group">
                        <label class="col-md-3 label">Name<span class='important'>*</span></label>
                        <label class="col-md-7 input custom-input-box"><%= f.text_field :name, class: "input-sm" %></label>
                      </section>
                      <section class="form-group">
                        <label class="col-md-3 label">Address</label>
                        <label class="col-md-7 input custom-input-box"><%= f.text_field :address, class: "input-sm" %></label>
                      </section>
                      <section class="form-group">
                        <label class="col-md-3 label">NPWP <span class='important'>*</span></label>
                        <label class="col-md-7 input custom-input-box"><%= f.text_field :npwp, class: "input-sm" %></label>
                      </section>
                      <section class="form-group">
                        <label class="col-md-3 label">NPWP Address</label>
                        <label class="col-md-7 input custom-input-box"><%= f.text_field :npwp_address, class: "input-sm" %></label>
                        </label>
                      </section>
                      <section class="form-group">
                        <label class="col-md-3 label">Title</label>
                        <label class="col-md-7 input custom-input-box"><%= f.text_field :title, class: "input-sm" %></label>
                      </section>
                      <section class="form-group">
                        <label class="col-md-3 label">Footer <span class='important'>*</span></label>
                        <label class="col-md-7 input custom-input-box"><%= f.text_field :footer, class: "input-sm" %></label>
                      </section>
                      <section class="form-group">
                        <label class="col-md-3 label">Custom CSS  <span class='important'>*</span></label>
                        <label class="col-md-7 input custom-input-box"><%= f.text_field :custom_css, class: "input-sm" %></label>
                      </section>
                    </section>
                    <section class="col col-md-6">
                      <section class="col col-md-12">
                        <div class="logo-company del-mrg">
                          <%= f.file_field :logo, :onchange =>"readURL(this);"%>
                          <a class="opt-profile change tip btn-upload" data-toggle="tooltip" title="Upload Photo" data-original-title="Upload" onclick="$('#myLogo').click();" style="cursor: pointer;">
                            <img id="img_prev" src="/img/Actions-insert-image-icon.png" width='135px'/>
                          </a>
                        </div>
                        <label class="col-md-12 label" style="text-align: center; margin-top: 10px;">Upload Logo</label>
                      </section>
                      <section class="col col-md-12">
                        <div class="favicon-company del-mrg">
                          <%= f.file_field :favicon, :onchange =>"readURL2(this);"%>
                          <a class="opt-profile change tip btn-upload" data-toggle="tooltip" title="Upload Photo" data-original-title="Upload" onclick="$('#myFavicon').click();" style="cursor: pointer;">
                            <img id="img_prev2" src="/img/Actions-insert-image-icon.png" width='135px'/>
                          </a>
                        </div>
                        <label class="col-md-12 label" style="text-align: center; margin-top: 10px;">Upload Favicon</label>
                      </section>
                    </section>
                    </section>
                  </section>
                </div>
              </fieldset>
              <footer>
                <%= submit_tag 'Submit', class: 'btn btn-primary' %>
                <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
              </footer>
            <% end %>
          </div><!-- end widget content -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->
<script>
function readURL(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    reader.onload = function (e) {
      $('#img_prev')
        .attr('src', e.target.result)
        .width(135)
        .height(135);
    };
    reader.readAsDataURL(input.files[0]);
    $('.profile-user').next().html($('#myLogo').val())
  }
}
function readURL2(input) {
  if (input.files && input.files[0]) {
    var reader = new FileReader();
    reader.onload = function (e) {
      $('#img_prev2')
        .attr('src', e.target.result)
        .width(135)
        .height(135);
    };
    reader.readAsDataURL(input.files[0]);
    $('.profile-user').next().html($('#myFavicon').val())
  }
}
</script>

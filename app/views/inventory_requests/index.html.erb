<link rel="stylesheet" href="/css/jquery-ui-1.11.4.css">
<script src="/js/jquery-1.10.2.js"></script>
<script src="/js/jquery-ui-1.11.4.js"></script>
<div id="ribbon">
  <ol class="breadcrumb">
    <li><%= t(:data_master) %></li><li><%= t(:inventory_request) %></li><li><%= t(:list) %></li>
  </ol>
</div>
<div id="content">
  <section id="widget-grid" class="">
    <div id="notice_template"><%= render 'layouts/notice' %></div>
    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <header id="header-product" role="heading">
          <h2><span class="widget-icon"> <i class="fa fa-list-ul"></i> </span><%= t(:inventory_request_list) %></h2> <!-- header content --></header>
          <div>
            <div class="widget-body no-padding">
              <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
                <li class="dropdown">
                  <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
                  <ul class="dropdown-menu" >
                    <li style="color:'black';"><%= link_to "Export to Excel", inventory_requests_path(:id => params[:id], format: "xls") %></li>
                  </ul>
                </li>
              </ul>
              <%= link_to raw("<span class='btn-label'><i class='glyphicon glyphicon-plus'></i></span>#{t(:add_inventory_request)}"), new_inventory_request_path, class: "btn btn-labeled btn-primary edit-btn-primary" %>
            </div>
            <table class="table table-striped table-bordered" width="100%">
              <thead>
                <tr>
                  <th><%= t(:no) %></th>
                  <th>
                    Date
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'code-asc', class: 'sorting' %>
                    </span>
                  </th>
                  <th>
                    <%= t(:status) %>
                    <span style="float: right;">
                      <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'qty-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'qty-asc', class: 'sorting' %>
                    </span>
                  </th>
                  <th>Action</th>
                </tr>
                <tr>
                    <th class="hasinput">
                      <%= text_field_tag :number, params[:number], class: 'form-control search' %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :date, params[:date], class: 'form-control search', name: "to_char(date, 'YYYY-MM-DD')" %>
                    </th>
                    <th class="hasinput">
                      <%= text_field_tag :status, params[:status], class: 'form-control search' %>
                    </th>
                    <th class="hasinput"></th>
                </tr>
                </thead>
                <tbody id='inventory_request-list'><%= render 'inventory_request_list' %></tbody>
              </table>
          </div>
        </div>
      </article>
    </div>
  </section>
</div>

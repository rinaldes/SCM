<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
      </button>
      <h4 class="modal-title" id="myModalLabel">Browse IR</h4>
    </div>
    <div class="modal-body" style="color:#5E5E5E">
      <table class="table table-striped table-brequested table-hover" width="100%">
        <thead>
          <tr>
            <th>Number</th>
            <!-- <th>
              Barcode
              <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' %>
              <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'code-asc', class: 'sorting' %>
            </th> -->
            <th>
              Date
              <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'date-desc', class: 'sorting hide' %>
              <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'date-asc', class: 'sorting' %>
            </th>
            <th>
              Status
              <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'supplier_code-desc', class: 'sorting hide' %>
              <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'supplier_code-asc', class: 'sorting' %>
            </th>
            <th>Action</th>
          </tr>
          <tr>
            <th><%= text_field_tag :number, params[:number], class: 'form-control search', onkeyup: "reload_ir()" %></th>
            <th><%= text_field_tag :date, params[:date], class: 'form-control search',name: "to_char(inventory_requests.date,'DD-MM-YYYY')", onkeyup: "reload_ir()" %></th>
            <!-- <th><%= text_field_tag :supplier_name, params[:supplier_name], class: 'form-control search', onkeyup: "reload_products()" %></th> -->
            <th><%= text_field_tag :status, params[:status], class: 'form-control search', onkeyup: "reload_ir()" %></th>
            <!-- <th><%= text_field_tag :article, params[:article], class: 'form-control search', onkeyup: "reload_products()" %></th> -->

            <th></th>
          </tr>
        </thead>
        <tbody id='product-search'>
          <%= render 'ir_search_list' %>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">
        Cancel
      </button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<SCRIPT>
  function reload_ir(){
    $(document).keypress(function(e) {
      if(e.which == 13){
        $.ajax({
          url: '/inventory_requests/search_in_modal',
          method: "get",
          // data: {department: $('.modal-body #department').val(), m_class_name: $('.modal-body #m_class_name').val(), brand_name: $('.modal-body #brand_name').val(),
          // article: $('.modal-body #article').val(), supplier_code: $('#supplier_code').val()},
          dataType: "script"
        })
      }
    });
  }
</SCRIPT>

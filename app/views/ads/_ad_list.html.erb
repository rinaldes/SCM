<% @ads.each_with_index do |ad, i| %>
  <tr>
    <td class="hidden-phone"><%= params[:page] ? (params[:page].to_i*10+i-9) : i+1 %></td>
    <td><%= link_to ad.url, ad_path(ad), class: 'blue' %></td>
    <td><span class="name"><%= ad.ad_type %></span></td>
    <td><span class="name"><%= ad.valid_from %></span></td>
    <td><span class="name"><%= ad.valid_until %></span></td>
    <td><span class="name">
      <% toko = ad.store.split(', ') %>
      <% toko.each do |t| %>
        <%= t %><br>
      <% end %>
    </span></td>
    <td class="hidden-phone">
      <%= link_to edit_ad_path(ad), class: "btn btn-primary btn-xs" do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <%= link_to 'javascript:void(0)', onclick: "delete_one(#{ad.id}, 'ads')", class: "btn btn-danger btn-xs" do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    </td>
  </tr>
<% end %>
<tr>
  <td colspan=7>
    <% if @ads.present? %>
      <div class="dataTables_paginate paging_simple_numbers" id="dt_basic_paginate">
        <%= pagination_links(@ads, options = {}) %>
      </div>
    <% else %>
      <%= raw '<center>No Data Available</center>' %>
    <% end %>
  </td>
</tr>

<style type="text/css">
  .label{
    color: #151313;
  }
</style>
<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
      </button>
      <h4 class="modal-title" id="myModalLabel">Size Detail</h4>
    </div>
    <div class="modal-body" style="color:#5E5E5E">
      <div class="row">
        <section class="col col-md-12">
          <label class="col-md-12 input custom-input-box">
            <table class="table table-striped table-bordered" id="table_size">
              <thead>
                <tr>
                  <th>Size</th>
                  <% list_product.each_with_index do |detail, i| %>
                    <td><%= detail.product_size.size_detail.size_number.to_s rescue '' %></td>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th>Min Stock</th>
                  <% list_product.each_with_index do |detail, i| %>
                    <td><%= detail.min_stock.to_i %></td>
                  <% end %>
                </tr>
                <tr>
                  <th>Available Quantity</th>
                  <% list_product.each_with_index do |detail, i| %>
                    <td><%= detail.available_qty.to_i %></td>
                  <% end %>
                </tr>
                <tr>
                  <th>Requested Quantity</th>
                  <% product_sizes.each_with_index do |product_size, i| %>
                    <td>
                      <%= text_field_tag "purchase_request[purchase_request_details_attributes][#{key}#{i}][quantity]", quantities, style: 'width: 17px' %>
                      <%= hidden_field_tag "purchase_request[purchase_request_details_attributes][#{key}#{i}][product_size_id]", product_size.id %>
                    </td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </label>
        </section>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

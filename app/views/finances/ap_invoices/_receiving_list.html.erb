<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
      </button>
      <h4 class="modal-title" id="myModalLabel">Browse Receiving</h4>
    </div>
    <div class="modal-body" style="color:#5E5E5E">
      <table class="table table-striped table-brequested table-hover" width="100%">
        <thead>
          <tr>
            <th>NO</th>
            <th>GR NUMBER</th>
            <th>GR DATE</th>
            <th>STORE</th>
            <th>DPP</th>
            <th>PPN TOTAL</th>
            <th>ACTION</th>
          </tr>
          <tr>
            <th></th>
            <th><%= text_field_tag :number, params[:number], class: 'form-control search', onkeyup: "reload_receivings()" %></th>
            <th><%= text_field_tag :date, params[:date], class: 'form-control search', onkeyup: "reload_receivings()" %></th>
            <th><%= text_field_tag :description, params[:description], class: 'form-control search', onkeyup: "reload_receivings()" %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody id='receiving-search'>
          <%= render 'receiving_search_list' %>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">
        Cancel
      </button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<SCRIPT>
  function reload_receivings(){
    $(document).keypress(function(e) {
      if(e.which == 13){
        $.ajax({
          url: '/finances/ap_invoices/search_receivings',
          method: "get",
          data: {
            number: $('.modal-body #department').val(), date: $('.modal-body #brand').val()
          },
          dataType: "script"
        })
      }
    });
  }
</SCRIPT>

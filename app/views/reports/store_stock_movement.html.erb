<link rel="stylesheet" href="/css/jquery-ui.css">
<script src="/js/jquery-1.10.2.js"></script>
<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Reports</li><li>Product Movement</li><li>Stok Store Movement</li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-product">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2>Stock Store Movement</h2>
        </header>
        
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
          <ul id="myTab1" class="nav nav-tabs" style='margin: 20px 0 6px 6px; float: left'>
            <li class="dropdown">
              <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i></button>
              <ul class="dropdown-menu">
                <li><%= link_to "Export to Excel", reports_store_stock_movement_path(:id => params[:id], format: "xls") %></li>
              </ul>
            </li>
          </ul>
          <br/><br/><br/>
            <form class='smart-form' url="/products/stock">
              <fieldset class="smart-form">
                <div class="row">
                  <section class="col col-md-6">
                    <section>
                      <label class="col-md-3 label">Period</label>
                      <label class="col-md-9 input custom-input-box"><%= Time.now.strftime('%B %Y') %></label>
                    </section>
                    <section>
                      <label class="col-md-3 label">Store</label>
                      <label class="col-md-9 input custom-input-box">
                        <% if current_user.branch.present? %>
                          <%= current_user.branch.office_name %>
                          <%= hidden_field_tag :branch_id, current_user.branch_id %>
                        <% else %>
                          <%= select_tag :branch_id, options_for_select(Branch.all.map{|branch|[branch.office_name, branch.id]}), prompt: 'Please Select', class: 'form-control',
                            onchange: 'filter_stock()' %>
                        <% end %>
                      </label>
                    </section>
                  </section> <!-- col-md-6 -->
                  <section class="col col-md-6">
                    <section class="form-group">
                      <label class="col-md-2 label">Target Store</label>
                      <label class="col-md-10 textarea custom-input-box"><%= '261.185.200' %></label>
                    </section>
                    <section class="form-group">
                      <label class="col-md-2 label">VERSI HO</label>
                    </section>
                  </section>
                </div>
              </fieldset> <!-- tambah product -->
            </form> <!-- tambah product -->
          </div><!-- end widget content -->
          <div class="widget-body no-padding"><!-- TABEL -->
            <div class="table-responsive">
              <table class="table table-bordered table-striped" id='stock'><%= render 'stock' %></table>
            </div>
          </div><!-- END TABEL -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->

<SCRIPT>
  function filter_stock(){
    $.ajax(
    {
      url: "/reports/store_stock_movement",
      dataType: "script",
      data: $("form").serialize(),
      success: function (data){
        response(data)
      },
    });
  }

  $(document).ready(function() {
    $("#search_brand").autocomplete({
      search: function () {},
      source: function (request, response)
      {
        $.ajax(
        {
          url: "/brands/autocomplete_brand_name",
          dataType: "json",
          data: {term: request.term},
          success: function (data){
            response(data)
          }
        });
      },
      minLength: 1
    });
    $("#supplier_name").autocomplete({
      search: function () {},
      source: function (request, response)
      {
        $.ajax(
        {
          url: "/suppliers/autocomplete_supplier_name",
          dataType: "json",
          data: {term: request.term},
          success: function (data){
            response(data)
          }
        });
      },
      minLength: 1
    });
  })
</SCRIPT>
<% @mclasses.each_with_index do |mclass, i| %>
  <tr>
    <td class="hidden-phone"><%= params[:page] ? (params[:page].to_i*10+i-9) : i+1 %></td>
    <td><span class="name"><%= mclass.code %></span></td>
    <td class="hidden-phone"><%= mclass.name %></td>
    <td><span class="name"><%= mclass.department.name rescue ""%></span></td>
    <td class="hidden-phone">
      <%= link_to edit_mclass_path(mclass), class: "btn btn-primary btn-xs" do %>
        <i class="fa fa-pencil"> Edit</i>
      <% end %>
      <%= link_to 'javascript:void(0)', onclick: "delete_one(#{mclass.id}, 'mclasses')", class: "btn btn-danger btn-xs edit-btn-dlt" do %>
        <i class="fa fa-trash-o"> Delete</i>
      <% end %>
    </td>
  </tr>  
<% end %>
<tr>
  <td colspan=8>
    <%= will_paginate @mclasses %>
  </td>
</tr>
<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Master Data</li><li>Office</li><li>List</li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <section id="widget-grid" class=""><!-- widget grid -->
    <div id='notice_template'><%= render 'layouts/notice' %></div>
    <div class="row"><!-- row -->
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><!-- NEW WIDGET START -->
        <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false"><!-- Widget ID (each widget will need unique ID)-->
          <header id="header-product" role="heading">
          <h2><span class="widget-icon"> <i class="fa fa-list-ul"></i> </span> List Office</h2> <!-- header content --></header>
          <div><!-- widget div-->
            <div class="widget-body no-padding"><!-- widget content -->
              <%= link_to new_head_office_url, :class => "btn btn-labeled btn-primary edit-btn-primary" do %>
                <span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Add Office
              <% end %>
            </div><!-- widget div-->
            <table class="table table-striped table-bordered table-hover" width="100%">
              <thead>
                <tr>
                  <th>No</th>
                  <th>
                    Code <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'code-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'code-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Name <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'office_name-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'office_name-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Branch <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'branch-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'branch-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Address <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'address-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'address-asc', class: 'sorting' %>
                  </th>
                  <th class='nowrap'>
                    Telephone <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'phone_number-desc', class: 'sorting hide' %>
                    <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'phone_number-asc', class: 'sorting' %>
                  </th>
                  <th>
                    Description <%= link_to raw('<i class="fa fa-sort-desc"></i>'), 'javascript:void(0)', id: 'description-desc', class: 'sorting hide' %>
                      <%= link_to raw('<i class="fa fa-sort-asc"></i>'), 'javascript:void(0)', id: 'description-asc', class: 'sorting' %>
                  </th>
                  <th>Action</th>
                </tr>
                <tr>
                  <th></th>
                  <th class="hasinput">
                    <%= text_field_tag :code, params[:code], class: 'form-control search' %>
                  </th>
                  <th class="hasinput"><%= text_field_tag :office_name, params[:office_name], class: 'form-control search' %></th>
                  <th class="hasinput"><%= text_field_tag :city_name, params[:city_name], class: 'form-control search' %></th>
                  <th class="hasinput"><%= text_field_tag :address, params[:address], class: 'form-control search' %></th>
                  <th class="hasinput"><%= text_field_tag :phone_number, params[:phone_number], class: 'form-control search' %></th>
                  <th class="hasinput"><%= text_field_tag :description, params[:description], class: 'form-control search' %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id='head_office-list'><%= render ('head_office_list') %></tbody>
            </table>
          </div><!-- end widget -->
        </div><!-- end widget div -->
      </article><!-- WIDGET END -->
    </div>	<!-- end row -->
  </section><!-- end widget grid -->
</div>	<!-- end row -->

<link rel="stylesheet" href="/css/jquery-ui.css">
<script src="/js/jquery-1.10.2.js"></script>
<script src="/js/jquery-ui.js"></script>
<script src="jquery.maskMoney.js" type="text/javascript"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/jquery.form-validator.min.js"></script>
<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Master Data</li><li>Product Detail</li><li><%= label %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-supplier">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= label %> Product Detail</h2>
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @product_detail, html: {class: "smart-form", id: "form-update-verify", :autocomplete => "off"} do |f| %>
            <% product = @product_detail.product %>
              <div id='departments' style='display: none'></div>
              <fieldset> <!-- edit product detail -->
                <div class="row">
                  <section class="col col-md-6">
                    <section class="row form-group" style="margin: 0px;">
                      <label class="col-md-3 label">Barcode</label>
                      <label class="col-md-8 input custom-input-box">
                        <%= text_field_tag :product_barcode, (product.barcode rescue ''), class: "input-sm", disabled: "disabled" %>
                      </label>
                    </section>
                    <section class="row form-group" style="margin: 0px;">
                      <label class="col-md-3 label">Product Name</label>
                      <label class="col-md-8 input custom-input-box">
                        <%= text_field_tag :product_description, (product.description rescue ''), class: "input-sm", disabled: "disabled" %>
                      </label>
                    </section>
                    <section class="row form-group" style="margin: 0px;">
                      <label class="col-md-3 label">Warehouse</label>
                      <label class="col-md-8 input custom-input-box">
                        <%= text_field_tag :warehouse, (@product_detail.warehouse.office_name rescue ''), class: "input-sm", disabled: "disabled" %>
                      </label>
                    </section>
                    <section>
                      <label class="col-md-3 label">Safety Stock</label>
                      <label class="col-md-8 input custom-input-box">
                        <%= f.text_field :min_stock, :class => "form-control", value: (@product_detail.min_stock rescue '0'), data: {validation: 'number', validation_error_msg: 'The input value can only contain number' } %>
                      </label>
                    </section>
                    <section>
                      <label class="col-md-3 label">ROP Stock</label>
                      <label class="col-md-8 input custom-input-box">
                        <%= f.text_field :rop_stock, :class => "form-control", value: (@product_detail.rop_stock rescue '0'), data: {validation: 'number', validation_error_msg: 'The input value can only contain number' } %>
                      </label>
                    </section>
                    <section>
                      <label class="col-md-3 label">Max Stock</label>
                      <label class="col-md-8 input custom-input-box">
                        <%= f.text_field :max_stock, :class => "form-control", value: (@product_detail.max_stock rescue '0'), data: {validation: 'number', validation_error_msg: 'The input value can only contain number' } %>
                      </label>
                    </section>
                  </section><br>
                </div> <!-- row -->
              </fieldset> <!-- tambah supplier -->
              <footer>
                <button type="submit" class="btn btn-primary save">Submit</button>
                <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
              </footer>
            <% end %>
          </div><!-- end widget content -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->
<SCRIPT>
  $.validate({
    lang: 'en'
  });
</SCRIPT>

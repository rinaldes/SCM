<% @purchase_request.purchase_request_details.group_by{|prd|prd.product_size.product_id}.each do |prd| %>
  <% product = prd[1][0].product_size.product %>
  <%= render 'modal_product', product: product, quantities: prd[1].map(&:quantity), product_sizes: product.product_sizes, key: "#{key}", prd: prd[1].map(&:id) %>
<% end %>
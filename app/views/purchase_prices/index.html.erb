        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Import Purchase Price</h4>
      </div>
      <%= form_tag import_purchase_prices_path(:id => params[:id]), multipart: true do %>
        <div class="modal-body">
          <%= file_field_tag :file %>
        </div>
        <div class="modal-footer">
          <%= link_to "Download Template", selling_prices_path(format: "csv", :a => "a"), :class => "btn btn-success" %>
          <%= submit_tag "Import", :class => "btn btn-primary"%>
          <%#= submit_tag "Reset Product Per Store", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
$(document).ready(function() {
  $('#commit').bind("click",function(){
    if(!$('#file').val()){
      alert("File not been chosen");
      return false;
    }
  });
  window.reset = function (e) {
    e.wrap('<form>').closest('form').get(0).reset();
    e.unwrap();
  }
});
function checkfile(sender) {
    var validExts = new Array(".csv");
    var fileExt = sender.value;
    fileExt = fileExt.substring(fileExt.lastIndexOf('.'));
    if (validExts.indexOf(fileExt) < 0) {
      alert("This is not a csv file");
      reset($("#file"));
      return false;
    }
    else return true;
};
function fitur_filter(idnya){
  $.ajax({
    url: "/purchase_prices",
    method: "get",
    data: {
      fitur_filter: $("#fitur_filter").val(),
      search: {
        "barcode": $("#barcode").val(),
        "offices.office_name": $("#office_name").val(),
        "article": $("#article").val(),
        "products.description": $("#product_id").val(),
        "to_char(purchase_prices.start_date,'YYYY-MM-DD')": $("#start_date").val(),
        "to_char(purchase_prices.end_date,'YYYY-MM-DD')": $("#end_date").val()
      }
    },
    dataType: "script"
  })
};
</script>

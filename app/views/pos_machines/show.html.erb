<script src="/js/jquery-2.1.1.min.js"></script><!-- Link to Google CDN's jQuery + jQueryUI; fall back to local -->
<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Master Data</li><li>Post Machine</li><li>: <%= @pos_machine.name %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-supplier">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2>: <%= @pos_machine.name %></h2>
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @pos_machine, html: {class: "smart-form", id: "form-update-verify"} do |f| %>
              <fieldset>
                <div class="row">
                  <section class="col col-md-6">

                    <section>
                      <label class="col-md-2 label">Name <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box">: <%= @pos_machine.name %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Office <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box">: <%= @pos_machine.office.office_name rescue '' %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Hide Empty Stock</label>
                      <label class="col-md-9 custom-input-box">: <%= @pos_machine.hide_empty_stock %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Enable PPN</label>
                      <label class="col-md-9 custom-input-box">: <%= @pos_machine.enable_ppn %></label>
                    </section>

                  </section> <!-- col-md-6 -->
                  <section class="col col-md-6">
                    <section>
                      <label class="col-md-2 label">Receipt Footer</label>
                      <label class="col-md-9 input custom-input-box">: <%= @pos_machine.receipt_footer %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Eod Footer</label>
                      <label class="col-md-9 input custom-input-box">: <%= @pos_machine.eod_footer %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Enable Minus Stock</label>
                      <label class="col-md-9 custom-input-box">: <%= @pos_machine.enable_minus_stock %></label>
                    </section>
                    <section>
                      <label class="col-md-2 label">Enable Loss Price</label>
                      <label class="col-md-9 custom-input-box">: <%= @pos_machine.enable_loss_price %></label>
                    </section>

                  </section>
                </div> <!-- row -->
              </fieldset>
              <footer>
                <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
              </footer>
            <% end %>
          </div><!-- end widget content -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->

<script src="/js/jquery.min.js"></script><!-- Link to Google CDN's jQuery + jQueryUI; fall back to local -->
<div id="ribbon"><!-- RIBBON -->
  <ol class="breadcrumb"><!-- breadcrumb -->
    <li>Master Data</li><li>Bank</li><li><%= label %></li>
  </ol><!-- end breadcrumb -->
</div><!-- END RIBBON -->
<div id="content"><!-- MAIN CONTENT -->
  <div class="row">
    <article class="col-sm-12 col-md-12"><!-- NEW COL START -->
      <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
        <header id="header-supplier">
          <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
          <h2><%= label %> Bank</h2>
        </header>
        <div><!-- widget div-->
          <div class="widget-body no-padding"><!-- widget content -->
            <%= form_for @edc_machine, html: {class: "smart-form", id: "form-update-verify"} do |f| %>
              <fieldset>
                <div class="row">

                  <section class="col col-md-6">
                    <section class="form-group">
                      <label class="col-md-3 label">Bank Name <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :bank_name, :class => "input-sm" %></label>
                    </section>
                    <section class="form-group">
                      <label class="col-md-3 label">Branch <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box"><%= f.text_field :branch, :class => "input-sm" %></label>
                    </section>
                    <section class="form-group">
                      <label class="col-md-3 label">EDC Machine <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box">
                        <%= f.number_field :edc_serial_number, class: "input-sm" %>
                      </label>
                    </section>
                  </section> <!-- col-md-6 -->

                  <section class="col col-md-6">
                    <section class="form-group">
                      <label class="col-md-3 label">Account Number <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box">
                        <%= f.number_field :account_number, class: "input-sm" %>
                      </label>
                    </section>
                    <section class="form-group">
                      <label class="col-md-3 label">Owner Name <span class='important'>*</span></label>
                      <label class="col-md-9 input custom-input-box">
                        <%= f.text_field :owner, class: "input-sm" %>
                      </label>
                    </section>
                  </section><!-- col-md-6 -->

                </div> <!-- row -->
              </fieldset>
              <footer>
                <%= submit_tag 'Submit', class: 'btn btn-primary' %>
                <button type="button" class="btn btn-default" onclick="window.history.back();">Back</button>
              </footer>
            <% end %>
          </div><!-- end widget content -->
        </div><!-- end widget div -->
      </div><!-- end widget -->
    </article><!-- END COL -->
  </div><!-- end widget div -->
</div><!-- end widget div -->

<!--  Modal Setting Point-->
<div class="modal fade over-flow-none table-responsive" id="myModalPoint" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Setting Poin</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
       <!--    <div >
            <div class="alert alert-block alert-error fade in" id="notification_setting">
              <a data-dismiss="alert" class="close" href="javascript:void(0)" data-original-title="">Ã—</a>
            </div>
          </div> -->
          <%=
            form_for(@setting, remote: true, url:  create_setting_point_members_path,
              html: { autocomplete: "off" }
            ) do |f|
          %>
            <div class="row-fluid" style="margin: 0px auto;">
              <div class="span12">
                <div class="control-group marginB11px">
                  <%= label_tag(:price, raw("Setting Nilai Per-Point"), :class => "control-label") %>
                  <div class="controls controls-row">
                    <%= f.text_field :price, :class => "span12 auto-limit", :placeholder=> "Rp" %>
                  </div>
                </div>
                <div class="control-group marginB11px">
                  <%= label_tag(:point, "Point", :class => "control-label") %>
                  <div class="controls controls-row">
                    <%= f.text_field :point, :class => "span12", :placeholder=> "Point" %>
                  </div>
                </div>
                <div>
                  <label class='control-label'>Expired Date</label>
                  <%= f.text_field :expired_date, :class => "input-block-level", :placeholder=> "Date Expired"%>
                </div>
                <div class="control-group marginB11px">
                  <%= label_tag(:description, raw("Keterangan"), :class => "control-label") %>
                  <div class="controls controls-row">
                    <%= f.text_area :description, :class => "span12", :cols => "10", :rows => "2", :placeholder=> "Keterangan" %>
                  </div>
                </div>
                <div class="control-group marginB11px">
                  <div class="controls controls-row">
                    <%= submit_tag "Simpan", :class => "btn btn-success" %>
                    <%= submit_tag "Batal", :type => "reset" ,:class => "btn btn-info modal-out" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<script>
  $('.modal-out').on("click", function(){
    $("#myModalVerify").modal('hide');
  });

  $(function(ready) {
    $('#setting_point_member_expired_date').datepicker({
      dateFormat: 'dd-mm-yy'
    })
  });
</script>

</div>  
<!--  Modal End -->
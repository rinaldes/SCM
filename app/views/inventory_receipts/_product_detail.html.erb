<% @purchase_order.purchase_order_details.group_by{|prd|prd.product_id}.each do |prd| %>
  <% product = prd[1][0].product %>
  <%= render partial: 'modal_product', locals: {product: product, quantities: prd[1].map(&:quantity), product_sizes: product.product_sizes, key: "#{key}#{product.id}"} %>
<% end %>
